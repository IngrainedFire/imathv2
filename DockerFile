# Use Node 22 (Nuxt 4 needs >=20.19 or >=22.12)
FROM node:22-alpine

# Set working directory
WORKDIR /app

# Copy package files first (for caching)
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy the rest of the app
COPY . .

# Build the Nuxt app
RUN npm run build

# Expose port
EXPOSE 3000

# Start the app
CMD ["node", ".output/server/index.mjs"]
